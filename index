<h3 id="output"></h3>

<script>
  function checkValues() {
    const inputElements = document.querySelectorAll('.input-text-5');
    const outputElement = document.getElementById('output');
    let allGreaterThan0_5 = true;

    inputElements.forEach(function (inputElement) {
      const inputValue = parseFloat(inputElement.value);

      if (inputValue <= 0.5) {
        allGreaterThan0_5 = false;
        return;
      }
    });

    if (allGreaterThan0_5) {
      outputElement.textContent = 'Normal Heart Beat';
    } else {
      outputElement.textContent = 'Abnormal Heart Beat';
    }
  }

  document.getElementById('calculateButton').addEventListener('click', function(event) {
    event.preventDefault();
    checkValues();
  });
</script>

      
